mixin button($text="", $class="")
    button.rounded-5.main_button.fs-6.text-center.text-uppercase.main-button.w-100(class=$class) #{$text}

mixin card(image, alt, title, description, price, link, linkText)
  figure.col-12.col-sm-6.col-md-6.col-lg-3.mb-4
    .position-relative
      img.card-img-top(src=image, alt=alt)
      div.triangle
        svg.star(width="20" height="20")
          use(xlink:href="#white-star")
    figcaption.card-body.p-3
      h5.card-title.fw-normal.pb-2= title
      p.card-text= description
      h4.text-primary.d-inline.pe-5= `${price} грн.`
      a.text-decoration-none.text-warning.pe-1.hover-scale(href=link)= linkText
        svg(width="16" height="16")
          use(href="#icon-arrow")

mixin button_main_down($text="СКАЧАТИ")
  a.position-relative.text-decoration-none.mt-2.rounded-5.hotel(href="#")= $text